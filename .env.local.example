# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890

# API Security
API_SECRET_KEY=your_secret_admin_api_key_here
NEXT_PUBLIC_API_KEY=your_public_api_key_here

# Admin Configuration
ADMIN_EMAIL=admin@madtrackers.com

# OpenAI API Key (si lo usas)
OPENAI_API_KEY=your_openai_api_key_here

# Configuración de PayPal
NEXT_PUBLIC_PAYPAL_BUSINESS_EMAIL=tu-email@paypal.com
NEXT_PUBLIC_PAYPAL_ENVIRONMENT=sandbox
PAYPAL_CLIENT_ID=tu-client-id
PAYPAL_CLIENT_SECRET=tu-client-secret

# Google reCAPTCHA v3
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=site_key
RECAPTCHA_SECRET_KEY=secret_key

# Configuración de Mantenimiento
# Establece en 'true' para mostrar la página de mantenimiento en lugar del pricing
NEXT_PUBLIC_MAINTENANCE_MODE=false
